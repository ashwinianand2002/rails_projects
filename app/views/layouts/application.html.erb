<!DOCTYPE html>
<html>
	<head>
	  <title><%= title %> </title>
	  <%= stylesheet_link_tag    "application" %>
	  <%= javascript_include_tag "application" %>
	  <%= csrf_meta_tags %>
	</head>
	<body>
		<div class = "container">
			<%= render 'layouts/header' %>
		</div>
		<section class= "round">
			<%= yield %>
		</section>
		<%= render 'layouts/footer' %>
		<%= debug(params) if Rails.env.development? %>
	</body>
</html>
